pipeline {
    agent any
    tools {
        maven 'maven'
    }
    options {
        buildDiscarder(logRotator(daysToKeepStr: '30', artifactDaysToKeepStr: '30'))
        timeout(time: 50, unit: 'MINUTES')
        timestamps()
        disableConcurrentBuilds()
    }
    environment {
        repoName = 'darinpope-java-web-app'
        branchName = 'main'
    }
    stages {
        stage('Build and Package') {
            steps {
                script {
                    pom = readMavenPom file: "pom.xml"
                    projectVersion = pom.version
                    sh """
                        mvn clean package -Dmaven.test.skip=true
                    """
                }
            }
        }
        stage('Upload Artifacts to S3 bucket') {
            steps {
                script {
                    sh '''
                    rm -rf s3uploadjar
                    mkdir s3uploadjar
                    chmod 755 s3uploadjar
                    cp target/*.jar s3uploadjar/
                    aws s3 cp s3uploadjar/ s3://shru123/ --recursive
                    '''
                }
            }
        }
        stage('CleanWorkspace') {
            steps {
                cleanWs()
                echo 'Cleaned workspace after build'
            }
        }
    }
}
